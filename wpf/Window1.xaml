<Window x:Class="course_project.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:course_project"
        mc:Ignorable="d"
        Title="Логи" Height="450" MinHeight="450" Width="400" MinWidth="400" MaxWidth="800" MaxHeight="900"
        Topmost="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="350*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" x:Name="logsG" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер панели" Binding="{Binding id_panel}"/>
                <DataGridTextColumn Header="Пользователь" Binding="{Binding user.firstname}"/>
                <DataGridTextColumn Header="Начальная стадия" Binding="{Binding initial_stage}"/>
                <DataGridTextColumn Header="Конечная стадия" Binding="{Binding final_stage}"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding date}"/>
                <DataGridTextColumn Header="Результат" Binding="{Binding result}"/>
            </DataGrid.Columns>
        </DataGrid>
        
        
        <Button x:Name="comeback" FontSize="40" Content="Назад" HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Stretch"  Grid.Row="1" Click="comeback_Click"  />

    </Grid>
</Window>
